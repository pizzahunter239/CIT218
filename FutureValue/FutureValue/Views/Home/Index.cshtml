@model FutureValueModel
@{
    ViewBag.Title = "Future Value Calculator";
}

<div class="row">
    <h1 class="col-12">Future Value Calculator</h1>
</div>

<div asp-validation-summary="All" class="text-danger"></div>

<div class="row">
    <form asp-action="Index" method="post" class="col-6">
        <div class="form-group">
            <label asp-for="MonthlyInvestment">Monthly investment:</label>
            <input asp-for="MonthlyInvestment" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="YearlyInterestRate">Yearly interest rate:</label>
            <input asp-for="YearlyInterestRate" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Years">Number of years:</label>
            <input asp-for="Years" class="form-control" />
        </div>

        <div class="form-group">
            <label>Future value:</label>
            <input value="@ViewBag.FV.ToString("C2")" class="form-control" readonly />
        </div>

        <button type="submit" class="btn btn-dark">Calculate</button>
        <a asp-action="Index" class="btn btn-outline-dark">Clear</a>
    </form>

    <div class="col-4">
        <img src="~/images/money.jpg" alt="Money" class="img-fluid" />
    </div>
</div>